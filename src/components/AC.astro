---
import PrimateSlide from './PrimateSlide.astro';
import { Image } from 'astro:assets';

// Import AC assets
import acImage from '../assets/AC/ac.jpg';
import acAudioFile from '../assets/AC/241204_0709.wav';
import acAnnotations from '../assets/AC/241204_0709.txt?raw';
import acReference from '../assets/AC/ref.txt?raw';

const subtitle = "Peruvian Spider Monkey / Mono ara√±a peruano / Ateles chamek";

// Create a modified species object with imported assets
const speciesAssets = {
  image: acImage,
  audio: acAudioFile,
  annotations: acAnnotations,
  reference: acReference
};
---

<PrimateSlide 
  speciesCode="AC"
  subtitle={subtitle}
  assets={speciesAssets}
  bgClass="bg-gradient-to-b from-black to-gray-900"
/> 