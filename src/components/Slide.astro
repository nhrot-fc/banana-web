---
interface Props {
  id: string;
  title?: string;
  subtitle?: string;
  bgClass?: string;
}

const {
  id,
  title,
  subtitle,
  bgClass = "bg-gradient-to-b from-dark to-black",
} = Astro.props;
---

<section
  id={id}
  class={`slide h-screen w-full flex flex-col justify-center snap-start ${bgClass}`}
>
  <div class="container mx-auto px-8 py-16">
    {
      title && (
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-green-400">
          {title}
        </h2>
      )
    }
    {
      subtitle && (
        <h3 class="text-xl md:text-2xl mb-8 text-text opacity-80">{subtitle}</h3>
      )
    }
    <div class="slide-content">
      <slot />
    </div>
  </div>
</section>

<style>
  .slide-content {
    /*font-size: 1.35rem;*/
    font-size: 1.2rem;
  }

  /* Aumentar tama√±o de fuente global para textos */
  :global(.text-sm) {
    /*font-size: 1.35rem !important;*/
  }

  :global(.text-xs) {
    /*font-size: 1.1rem !important;*/
  }

  :global(p),
  :global(li) {
    /*font-size: 1.2rem;*/
    font-size: 1rem;
