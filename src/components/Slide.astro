---
interface Props {
  id: string;
  title?: string;
  subtitle?: string;
  bgClass?: string;
}

const {
  id,
  title,
  subtitle,
  bgClass = "bg-gradient-to-b from-gray-950 to-black",
} = Astro.props;
---

<section
  id={id}
  class={`slide h-screen w-full flex flex-col justify-center snap-start ${bgClass}`}
>
  <div class="container mx-auto px-8 py-16">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-bold mb-3 text-green-400">
          {title}
        </h2>
      )
    }
    {
      subtitle && (
        <h3 class="text-lg md:text-xl mb-6 text-text opacity-80">{subtitle}</h3>
      )
    }
    <div class="slide-content">
      <slot />
    </div>
  </div>
</section>

<style>
  .slide-content {
    font-size: 1rem;
  }

  /* Set text sizes to default */
  :global(.text-sm) {
    font-size: 0.875rem !important;
  }

  :global(.text-xs) {
    font-size: 0.75rem !important;
  }

  :global(p),
  :global(li) {
    font-size: 0.875rem;
  }

  :global(h4) {
    font-size: 1.25rem !important;
  }

  :global(.card) {
    padding: 1rem !important;
  }
</style>

