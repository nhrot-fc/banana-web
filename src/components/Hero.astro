<section class="relative flex items-center justify-center min-h-[70vh] overflow-hidden py-16">
  <!-- Background gradient with overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-dark to-black z-0">
    <!-- We'll add a background image here later when available -->
    <div class="absolute inset-0 bg-black/30"></div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-green-400">
        Automatización del análisis bio-acústico en primates
      </h1>
      <h2 class="text-lg md:text-xl mb-6 text-gray-300">
        Utilizando técnicas de Aprendizaje Profundo para la Detección en la Amazonía Peruana a partir de Datos de Monitoreo Acústico Pasivo
      </h2>
      
      <div class="flex flex-wrap justify-center gap-4 mt-8">
        <a href="#generalidades" class="btn-primary flex items-center text-sm">
          <span>Explorar Investigación</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v10.586l-3.293-3.293a1 1 0 10-1.414 1.414l5 5a1 1 0 001.414 0l5-5a1 1 0 00-1.414-1.414L11 14.586V4a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="#estado" class="btn-secondary flex items-center text-sm">
          <span>Estado del Arte</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
          </svg>
        </a>
      </div>

      <!-- Stats similar to Arbimon -->
      <div class="mt-10 grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div class="flex flex-col">
          <span class="text-2xl font-bold text-green-500">+1000</span>
          <span class="text-gray-400 text-xs">Horas de audio</span>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl font-bold text-green-500">10+</span>
          <span class="text-gray-400 text-xs">Especies identificadas</span>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl font-bold text-green-500">95%</span>
          <span class="text-gray-400 text-xs">Precisión del modelo</span>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl font-bold text-green-500">3</span>
          <span class="text-gray-400 text-xs">Sitios de estudio</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v10.586l-3.293-3.293a1 1 0 10-1.414 1.414l5 5a1 1 0 001.414 0l5-5a1 1 0 00-1.414-1.414L11 14.586V4a1 1 0 00-1-1z" clip-rule="evenodd" />
    </svg>
  </div>
</section>
