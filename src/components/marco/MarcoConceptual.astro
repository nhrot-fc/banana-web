---
import clearSpectrogram from "../../assets/marco/conceptual/clear.png";
import noisySpectrogram from "../../assets/marco/conceptual/noisy.png";
---

<section id="marco-conceptual">
  <div class="container mx-auto px-4">
    <!-- Prominent Spectrogram Comparison -->
    <div class="card mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex flex-col items-center">
          <h5 class="text-center text-lg font-medium text-green-400 mb-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 inline-block mr-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Vocalización Clara
          </h5>
          <div class="w-full flex justify-center mb-2 spec-container">
            <img
              src={clearSpectrogram.src}
              alt="Espectrograma de vocalización clara"
              class="w-full rounded-lg shadow-xl border-2 border-green-700/50 hover:scale-105 transition-transform spectrogram-image"
            />
          </div>
          <span
            class="bg-green-900/30 text-green-400 text-xs font-medium px-3 py-1 rounded-full"
            >Alta Calidad</span
          >
        </div>

        <div class="flex flex-col items-center">
          <h5 class="text-center text-lg font-medium text-amber-400 mb-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 inline-block mr-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
              ></path>
            </svg>
            Vocalización en Lluvia
          </h5>
          <div class="w-full flex justify-center mb-2 spec-container">
            <img
              src={noisySpectrogram.src}
              alt="Espectrograma de vocalización con ruido"
              class="w-full rounded-lg shadow-xl border-2 border-amber-700/50 hover:scale-105 transition-transform spectrogram-image"
            />
          </div>
          <span
            class="bg-amber-900/30 text-amber-400 text-xs font-medium px-3 py-1 rounded-full"
            >Ruido Ambiental</span
          >
        </div>
      </div>
    </div>

    <!-- Bottom pipeline visualization -->
    <div class="mt-8 p-4 rounded-lg bg-black/40 border border-gray-700">
      <h4 class="text-lg font-medium mb-3 text-center">
        Pipeline de Procesamiento y Clasificación
      </h4>
      <div class="flex flex-wrap justify-around items-center">
        <div class="text-center p-3">
          <div
            class="w-16 h-16 rounded-full bg-green-800/50 mx-auto flex items-center justify-center mb-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-green-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
              ></path>
            </svg>
          </div>
          <span class="text-sm text-gray-300">Grabación PAM</span>
        </div>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 text-green-500"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>

        <div class="text-center p-3">
          <div
            class="w-16 h-16 rounded-full bg-green-800/50 mx-auto flex items-center justify-center mb-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-green-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-300">Preprocesamiento</span>
        </div>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 text-green-500"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>

        <div class="text-center p-3">
          <div
            class="w-16 h-16 rounded-full bg-green-800/50 mx-auto flex items-center justify-center mb-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-green-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
          <span class="text-sm text-gray-300">Extracción</span>
        </div>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 text-green-500"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>

        <div class="text-center p-3">
          <div
            class="w-16 h-16 rounded-full bg-green-800/50 mx-auto flex items-center justify-center mb-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-green-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
              ></path>
            </svg>
          </div>
          <span class="text-sm text-gray-300">SED + Clasificación</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    background-color: rgba(17, 24, 39, 0.7);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1.25rem;
  }
  .card img {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }
  .card img:hover {
    box-shadow: 0 0 15px rgba(74, 222, 128, 0.5);
  }
  .spec-container {
    height: 300px; /* Fixed height container */
    overflow: hidden;
  }
  .spectrogram-image {
    height: 100%;
    object-fit: cover; /* Maintains aspect ratio but fills the container */
    object-position: center; /* Centers the image */
  }
</style>
