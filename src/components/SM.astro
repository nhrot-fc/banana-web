---
import PrimateSlide from './PrimateSlide.astro';
import { Image } from 'astro:assets';

// Import SM assets
import smImage from '../assets/SM/sm.jpg';
import smAudioFile from '../assets/SM/20231223_1436.wav';
import smAnnotations from '../assets/SM/20231223_1436.txt?raw';
import smReference from '../assets/SM/ref.txt?raw';

const subtitle = "Large headed Capuchin / Mono capuchino de cabeza grande / Sapajus apella macrocephalus";

// Create a modified species object with imported assets
const speciesAssets = {
  image: smImage,
  audio: smAudioFile,
  annotations: smAnnotations,
  reference: smReference
};
---

<PrimateSlide 
  speciesCode="SM"
  subtitle={subtitle}
  assets={speciesAssets}
  bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
/> 