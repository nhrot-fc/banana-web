---
import 'devicon/devicon.min.css';
---

<div class="space-y-6">
  <div class="card">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <!-- Programming & Environment -->
      <div
        class="bg-black/30 rounded-lg overflow-hidden border border-gray-700 p-4"
      >
        <h5 class="font-medium text-green-300 mb-3 text-center">
          Programación y Entorno
        </h5>
        <div class="grid grid-cols-3 gap-3">
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">Python</span>
            <span class="text-xs text-gray-400">Lenguaje base</span>
          </div>
          <div class="icon-container">
            <i class="devicon-vscode-plain colored tool-icon"></i>
            <span class="icon-label">VS Code</span>
            <span class="text-xs text-gray-400">Editor de código</span>
          </div>
          <div class="icon-container">
            <i class="devicon-github-original tool-icon"></i>
            <span class="icon-label">GitHub</span>
            <span class="text-xs text-gray-400">Control de versiones</span>
          </div>
        </div>
      </div>

      <!-- Data Science -->
      <div
        class="bg-black/30 rounded-lg overflow-hidden border border-gray-700 p-4"
      >
        <h5 class="font-medium text-green-300 mb-3 text-center">
          Ciencia de Datos
        </h5>
        <div class="grid grid-cols-3 gap-3">
          <div class="icon-container">
            <i class="devicon-pandas-plain tool-icon"></i>
            <span class="icon-label">Pandas</span>
            <span class="text-xs text-gray-400">Manipulación de datos</span>
          </div>
          <div class="icon-container">
            <i class="devicon-numpy-plain colored tool-icon"></i>
            <span class="icon-label">NumPy</span>
            <span class="text-xs text-gray-400">Cálculo numérico</span>
          </div>
          <div class="icon-container">
            <i class="devicon-jupyter-plain colored tool-icon"></i>
            <span class="icon-label">Jupyter</span>
            <span class="text-xs text-gray-400">Cuadernos interactivos</span>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <!-- ML & Deep Learning -->
      <div
        class="bg-black/30 rounded-lg overflow-hidden border border-gray-700 p-4"
      >
        <h5 class="font-medium text-green-300 mb-3 text-center">
          Deep Learning
        </h5>
        <div class="grid grid-cols-3 gap-3">
          <div class="icon-container">
            <i class="devicon-pytorch-plain colored tool-icon"></i>
            <span class="icon-label">PyTorch</span>
            <span class="text-xs text-gray-400">Framework principal</span>
          </div>
          <div class="icon-container">
            <i class="devicon-tensorflow-original colored tool-icon"></i>
            <span class="icon-label">TensorFlow</span>
            <span class="text-xs text-gray-400">Framework alternativo</span>
          </div>
          <div class="icon-container">
            <i class="devicon-google-plain colored tool-icon"></i>
            <span class="icon-label">Colab</span>
            <span class="text-xs text-gray-400">Entrenamiento en nube</span>
          </div>
        </div>
      </div>

      <!-- Audio Processing -->
      <div
        class="bg-black/30 rounded-lg overflow-hidden border border-gray-700 p-4"
      >
        <h5 class="font-medium text-green-300 mb-3 text-center">
          Procesamiento de Audio
        </h5>
        <div class="grid grid-cols-3 gap-3">
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">Librosa</span>
            <span class="text-xs text-gray-400">Análisis de audio</span>
          </div>
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">Kapre</span>
            <span class="text-xs text-gray-400">Preprocesamiento</span>
          </div>
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">Raven</span>
            <span class="text-xs text-gray-400">Etiquetado y análisis</span>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 mb-4">
      <!-- Platforms & Storage -->
      <div
        class="bg-black/30 rounded-lg overflow-hidden border border-gray-700 p-4"
      >
        <h5 class="font-medium text-green-300 mb-3 text-center">
          Plataformas & Gestión
        </h5>
        <div class="grid grid-cols-4 md:grid-cols-5 gap-3">
          <div class="icon-container">
            <i class="devicon-google-plain colored tool-icon"></i>
            <span class="icon-label">G. Drive</span>
            <span class="text-xs text-gray-400">Almacenamiento</span>
          </div>
          <div class="icon-container">
            <i class="devicon-firefox-plain colored tool-icon"></i>
            <span class="icon-label">Zotero</span>
            <span class="text-xs text-gray-400">Referencias</span>
          </div>
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">Arbimon</span>
            <span class="text-xs text-gray-400">Bioacústica</span>
          </div>
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">BirdNet</span>
            <span class="text-xs text-gray-400">Análisis automático</span>
          </div>
          <div class="icon-container">
            <i class="devicon-python-plain colored tool-icon"></i>
            <span class="icon-label">RavenPro</span>
            <span class="text-xs text-gray-400">Etiquetado profesional</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    background-color: rgba(17, 24, 39, 0.7);
    border: 1px solid rgba(55, 65, 81, 0.5);
    border-radius: 0.5rem;
    padding: 1.25rem;
  }

  .icon-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 100%;
  }

  .tool-icon {
    font-size: 40px;
    transition: transform 0.2s;
    filter: grayscale(20%) brightness(90%);
    margin-bottom: 0.5rem;
  }

  .tool-icon:hover {
    transform: scale(1.1);
    filter: grayscale(0%) brightness(100%);
  }

  .icon-label {
    font-size: 0.8rem;
    color: rgba(167, 243, 208, 0.9);
    text-align: center;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }
</style>
