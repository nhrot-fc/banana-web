---
import PrimateSlide from './PrimateSlide.astro';
import { Image } from 'astro:assets';

// Import LW assets
import lwImage from '../assets/LW/lw.jpg';
import lwAudioFile from '../assets/LW/240125_0025.wav';
import lwAnnotations from '../assets/LW/240125_0025.txt?raw';
import lwReference from '../assets/LW/ref.txt?raw';

const subtitle = "Weddell's saddle-back tamarin / Tit√≠ de Goeldi / Leontocebus weddelli";

// Create a modified species object with imported assets
const speciesAssets = {
  image: lwImage,
  audio: lwAudioFile,
  annotations: lwAnnotations,
  reference: lwReference
};
---

<PrimateSlide 
  speciesCode="LW"
  subtitle={subtitle}
  assets={speciesAssets}
  bgClass="bg-gradient-to-b from-gray-900 to-black"
/> 