---
import Layout from "../layouts/Layout.astro";
import Slide from "../components/Slide.astro";

// Import species-specific slide components
import AA from "../components/AA.astro";
import AC from "../components/AC.astro";
import AS from "../components/AS.astro";
import CC from "../components/CC.astro";
import LW from "../components/LW.astro";
import PT from "../components/PT.astro";
import SB from "../components/SB.astro";
import SM from "../components/SM.astro";
import Introduccion from "../components/generalidades/Introduccion.astro";
import Problematica from "../components/generalidades/Problematica.astro";
import ArbolProblemas from "../components/generalidades/ArbolProblemas.astro";
import Objetivos from "../components/generalidades/Objetivos.astro";
import Metodos from "../components/generalidades/Metodos.astro";
import Herramientas from "../components/generalidades/Herramientas.astro";
import DefinicionProblema from "../components/marco/DefinicionProblema.astro";
import MarcoTeorico from "../components/marco/MarcoTeorico.astro";
import MarcoConceptual from "../components/marco/MarcoConceptual.astro";
---

<Layout
  title="Automatización del análisis acústico de vocalizaciones de Primates | Amazonía Peruana"
>
  <!-- Slide 1: Title/Hero -->
  <Slide id="slide-1" bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]">
    <div class="text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-green-400">
        Automatización del Análisis Acústico de Vocalizaciones de Primates
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-green-100">
        Utilizando Técnicas de Aprendizaje Profundo en la Amazonía Peruana
      </p>
    </div>
  </Slide>

  <!-- Sección de Generalidades -->
  <Slide
    id="slide-intro"
    title="Introducción"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <Introduccion />
  </Slide>

  <Slide
    id="slide-problematica"
    title="Problematica"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <Problematica />
  </Slide>

  <Slide
    id="slide-arbol-problemas"
    title="Árbol de Problemas"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <ArbolProblemas />
  </Slide>

  <Slide
    id="slide-objetivos"
    title="Objetivos"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <Objetivos />
  </Slide>

  <Slide
    id="slide-metodos"
    title="Métodos"
    subtitle="Metodología CRISP-DM para Análisis Bio-acústico"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <Metodos />
  </Slide>

  <Slide
    id="slide-herramientas"
    title="Herramientas"
    subtitle="Tecnologías utilizadas en el proyecto"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <Herramientas />
  </Slide>

  <!-- Marco Referencial Section - Now Divided into 3 Slides -->
  <Slide
    id="slide-definicion-problema"
    title="Definición Formal del Problema"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <DefinicionProblema />
  </Slide>
  
  <Slide
    id="slide-marco-teorico"
    title="Marco Teórico"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <MarcoTeorico />
  </Slide>
  
  <Slide
    id="slide-marco-conceptual"
    title="Marco Conceptual"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <MarcoConceptual />
  </Slide>

  <!-- Slide 6: Marco Conceptual - Especies -->
  <AA />
  <AC />
  <AS />
  <CC />
  <LW />
  <PT />
  <SB />
  <SM />

  <!-- Slide 10: Referencias -->
  <Slide
    id="slide-10"
    title="4. Referencias"
    bgClass="bg-gradient-to-b from-[#051c0a] to-[#040705]"
  >
    <ul class="list-decimal space-y-3 text-green-100/80 text-base">
      <li>
        Palacios, V., et al. (2021). "Bioacoustic classification of Neotropical
        primates using convolutional neural networks". Ecological Informatics,
        64, 101339.
      </li>
      <li>
        Bermant, P. C., et al. (2019). "Deep learning for bio-acoustic
        monitoring of forest wildlife". Conservation Biology, 33(6), 1321-1329.
      </li>
      <li>
        Kalan, A. K., et al. (2020). "Passive acoustic monitoring reveals group
        ranging and territory use in wild primates". Proceedings of the Royal
        Society B, 287(1924), 20201244.
      </li>
      <li>
        Stowell, D., et al. (2022). "Automatic acoustic detection of birds
        through deep learning". The Journal of the Acoustical Society of
        America, 151(4), 2513-2527.
      </li>
      <li>
        LeCun, Y., et al. (2015). "Deep learning". Nature, 521(7553), 436-444.
      </li>
    </ul>
  </Slide>
</Layout>
